        <activity android:name=".showImg.ShowImgActivity" android:screenOrientation="portrait"/>
        <activity android:name=".webview.WebViewActivity"  android:screenOrientation="portrait"/>
        <activity android:name=".codewebview.CodeWebViewActivity" android:screenOrientation="portrait"/>
        <activity android:name=".p.PActivity" android:screenOrientation="portrait"/>
        <activity android:name=".bdphone.BDphoneActivity" android:screenOrientation="portrait"/>
        <activity android:name=".xgmm.XgmmActivity" android:screenOrientation="portrait"/>
        <activity android:name=".xgmm.QrmmActivity" android:screenOrientation="portrait"/>
        <activity android:name=".location.LocationActivity" android:screenOrientation="portrait"/>
    </application>
</manifest>